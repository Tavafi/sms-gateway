{
  "openapi": "3.0.0",
  "info": {
    "title": "SMS Gateway",
    "version": "1.0.0",
    "description": "\n### Disclaimer\n\nBy using this [API](https://en.wikipedia.org/wiki/API), assume you know what is doing.\n\n#### Support\n\nAsk the for help from **aasaam software development group** support center.\n\n* +982191008212\n* 3rd Floor, No 14, Noori(Kambiz) St, West Zartosht St, District 6, Tehran, IR\n",
    "contact": {
      "name": "aasaam",
      "url": "https://aasaam.com/",
      "email": "info@aasaam.com"
    },
    "license": {
      "name": "CC-BY-3.0",
      "url": "https://creativecommons.org/licenses/by/3.0/"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "Access for none browser client like mobile applications",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "cookieToken": {
        "description": "Default access for web application",
        "type": "apiKey",
        "in": "cookie",
        "name": "AuthToken"
      },
      "userApiKey": {
        "description": "User secret",
        "type": "apiKey",
        "in": "header",
        "name": "x-user-api-key"
      }
    },
    "schemas": {
      "GenericResponse": {
        "title": "Generic Response",
        "description": "Internal Server Error",
        "type": "object",
        "properties": {
          "statusCode": { "type": "integer", "example": 500 },
          "message": { "type": "string", "example": "Internal Server Error" },
          "validations": { "type": "object" },
          "name": { "type": "string" },
          "stack": {
            "type": "array",
            "description": "During development stage you can see stack trace",
            "items": { "type": "string" }
          }
        }
      },
      "SendMessage": {
        "title": "SendMessage",
        "description": "Send Message request",
        "type": "object",
        "required": ["mobile", "message"],
        "properties": {
          "mobile": {
            "description": "Mobile phone number with country prefix",
            "oneOf": [
              {
                "type": "string",
                "default": "",
                "minLength": 6,
                "maxLength": 16
              },
              {
                "type": "array",
                "default": [],
                "minItems": 1,
                "maxItems": 2000,
                "items": { "type": "string", "minLength": 6, "maxLength": 16 }
              }
            ]
          },
          "message": {
            "type": "string",
            "default": "",
            "minLength": 1,
            "maxLength": 2048
          }
        }
      }
    }
  },
  "servers": [{ "description": "SMS Gateway", "url": "/" }],
  "paths": {
    "/api/open-api/config": {
      "get": {
        "responses": { "200": { "description": "Default Response" } },
        "description": "Public configurations",
        "tags": ["config"]
      }
    },
    "/api/open-api/local-adapter/list": {
      "post": {
        "responses": { "200": { "description": "Default Response" } },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order": {
                    "type": "string",
                    "enum": ["id"],
                    "default": "id",
                    "nullable": true
                  },
                  "limit": {
                    "type": "number",
                    "default": 10,
                    "nullable": true
                  },
                  "filters": {
                    "type": "object",
                    "properties": {
                      "id_C_LAST_SEEN": {
                        "type": "string",
                        "example": "",
                        "nullable": true
                      },
                      "createdAt_C_START_DATETIME": {
                        "type": "string",
                        "format": "date-time",
                        "example": "",
                        "nullable": true
                      },
                      "createdAt_C_END_DATETIME": {
                        "type": "string",
                        "format": "date-time",
                        "example": "",
                        "nullable": true
                      },
                      "mobile_C_SEARCH": {
                        "type": "string",
                        "example": "",
                        "nullable": true
                      },
                      "message_C_FULL_TEXT_SEARCH": {
                        "type": "string",
                        "example": "",
                        "nullable": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/open-api/login": {
      "post": {
        "responses": {
          "200": {
            "content": {
              "application/json": { "schema": { "type": "boolean" } }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "title": "Generic Response",
                  "description": "Bad Request",
                  "type": "object",
                  "properties": {
                    "statusCode": { "type": "integer", "example": 400 },
                    "message": { "type": "string", "example": "Bad Request" },
                    "validations": { "type": "object" },
                    "name": { "type": "string" },
                    "stack": {
                      "type": "array",
                      "description": "During development stage you can see stack trace",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            },
            "description": "Bad Request"
          }
        },
        "description": "Login user",
        "tags": ["auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          },
          "required": true
        }
      }
    },
    "/api/open-api/send": {
      "post": {
        "responses": {
          "200": {
            "content": {
              "application/json": { "schema": { "type": "boolean" } }
            }
          }
        },
        "description": "Send message to list of mobile phone numbers",
        "tags": ["send"],
        "security": [{ "userApiKey": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "SendMessage",
                "type": "object",
                "required": ["mobile", "message"],
                "properties": {
                  "mobile": {
                    "description": "Mobile phone number with country prefix",
                    "oneOf": [
                      {
                        "type": "string",
                        "default": "",
                        "minLength": 6,
                        "maxLength": 16
                      },
                      {
                        "type": "array",
                        "default": [],
                        "minItems": 1,
                        "maxItems": 2000,
                        "items": {
                          "type": "string",
                          "minLength": 6,
                          "maxLength": 16
                        }
                      }
                    ]
                  },
                  "message": {
                    "type": "string",
                    "default": "",
                    "minLength": 1,
                    "maxLength": 2048
                  }
                }
              }
            }
          },
          "description": "Send Message request",
          "required": true
        }
      }
    },
    "/api/open-api/user/list": {
      "post": {
        "responses": { "200": { "description": "Default Response" } },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order": {
                    "type": "string",
                    "enum": ["id"],
                    "default": "id",
                    "nullable": true
                  },
                  "limit": {
                    "type": "number",
                    "default": 10,
                    "nullable": true
                  },
                  "filters": {
                    "type": "object",
                    "properties": {
                      "id_C_LAST_SEEN": {
                        "type": "string",
                        "example": "",
                        "nullable": true
                      },
                      "createdAt_C_START_DATETIME": {
                        "type": "string",
                        "format": "date-time",
                        "example": "",
                        "nullable": true
                      },
                      "createdAt_C_END_DATETIME": {
                        "type": "string",
                        "format": "date-time",
                        "example": "",
                        "nullable": true
                      },
                      "name_C_SEARCH": {
                        "type": "string",
                        "example": "",
                        "nullable": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/open-api/admin/update-user": {
      "post": {
        "responses": { "200": { "description": "Default Response" } },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["userId"],
                "properties": {
                  "userId": { "type": "number" },
                  "active": { "type": "boolean" },
                  "newPassword": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 64
                  }
                }
              }
            }
          },
          "required": true
        }
      }
    },
    "/api/open-api/user/change-password": {
      "post": {
        "responses": { "200": { "description": "Default Response" } },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["currentPassword", "newPassword"],
                "properties": {
                  "currentPassword": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 64
                  },
                  "newPassword": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 64
                  }
                }
              }
            }
          },
          "required": true
        }
      }
    },
    "/api/open-api/user/revoke-api-key": {
      "get": { "responses": { "200": { "description": "default response" } } }
    },
    "/api/open-api/user/data": {
      "get": { "responses": { "200": { "description": "default response" } } }
    }
  }
}
